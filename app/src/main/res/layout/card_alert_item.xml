    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        app:cardBackgroundColor="#EDEDED"
        android:layout_height="230dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/alertMediaView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:background="@color/grey"
            app:srcCompat="@drawable/emergency_alarm" />

        <TextView
            android:id="@+id/alertTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="150dp"
            android:text="@string/emergency_name"
            android:textAllCaps="true"
            android:textColor="#ff0000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/alertLocationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="175dp"
            android:text="@string/text_location"
            android:textColor="@color/black"
            android:textSize="14sp" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/alertFollowUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="160dp"
            android:text="@string/follow_up"/>

